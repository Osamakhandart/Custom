   
   ///post method
   dynamic response = await dio.post(
          apiUrl + url,
          data: formData,
          onSendProgress: (int sent, int total) {
            print('progress: ${(sent / total * 100).toStringAsFixed(0)}%');
            noti((sent / total * 100).toInt());
          },
        );
        
